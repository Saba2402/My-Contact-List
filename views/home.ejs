<html>
    <head>
      <title>
        <%= locals.title %>
      </title>
      <script src="https://kit.fontawesome.com/6aa617d0f8.js" crossorigin="anonymous"></script>
      <!--keep your css file linked below evey linked file ,so that u can override over the code-->
      <link rel="stylesheet" type="text/css" href="../asserts/css/home.css">
    </head>
    <body>
        <h1 id="page-heading">
          <i class="fa-solid fa-address-card"></i>
           My Contact List
        </h1>
        <div id="contact-list-container">
          <ul>
            <% for(let i of contacts_list) {%>
                 <li class="contact">
                  <div class="details">
                  <p><%= i.name %></p>
                  <p><%= i.phone %></p>
                </div>
                <div class="delete-button">
                  <a href="/delete-contact/?id=<%= i._id%>">
                    <i class="fa-solid fa-circle-xmark"></i>
                  </a>

                </div>
                 </li>
            <%}%>
          </ul>
        </div>

        <form id="new-contact-form" action="/create-contact" method="POST">
          <input type="text" name="name" placeholder="Enter Name" required>
          <input type="number" name="phone" placeholder="Enter Phone" required>

          <button type="submit">Add</button>
        </form>
        <script type="text/javascript" src="../asserts/js/home.js"></script>
    </body>
</html>